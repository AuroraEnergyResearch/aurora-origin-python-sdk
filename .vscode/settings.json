{
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--namespace-packages",
    "--explicit-package-bases",
    "--pretty"
  ],
  "python.linting.mypyPath": "${workspaceFolder}/.venv/Scripts/mypy",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--per-file-ignores=tools/cli.py:E402 */__init__.py:F401,F403"
  ],
  "python.linting.flake8Path": "${workspaceFolder}/.venv/Scripts/flake8",
  "python.pythonPath": ".venv\\Scripts\\python.exe",
  "editor.formatOnSave": true,
  "cSpell.words": [
    "Azathoth",
    "AZATHOTH",
    "Brynhildr",
    "BRYNHILDR",
    "Hastur",
    "HASTUR",
    "itertools",
    "Tatzelwurm",
    "TATZELWURM"
  ],
  "cSpell.language": "en-GB",
  "autoDocstring.docstringFormat": "google",
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "${workspaceFolder}/.venv/Scripts/pytest",
  "python.analysis.typeCheckingMode": "off"
}
